@page
@model RolaltyCardProject.Pages.RegisterBusinessAccount.IndexModel
@{
    Layout = "_Layout";
}

<h4 class="text-center">Upgrade to business account</h4>
<br />
<br />
<form method="post">
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="form-group">
                <label asp-for="Input.CompanyName"></label>
                <input asp-for="Input.CompanyName" class="form-control" />
                <span asp-validation-for="Input.CompanyName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber"></span>
            </div>
            <button type="submit" class="btn btn-primary">Upgrade</button>
            <a asp-page="../Index" class="btn btn-danger">Cancel</a>
        </div>
    </div>
</form>